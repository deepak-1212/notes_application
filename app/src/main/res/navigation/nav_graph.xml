<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.testingsite.mynotes.ui.HomeFragment"
        android:label="My Notes"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_archiveFragment"
            app:destination="@id/archiveFragment" />
        <action
            android:id="@+id/action_homeFragment_to_reminderFragment"
            app:destination="@id/reminderFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.testingsite.mynotes.ui.AddNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add_note">
        <action
            android:id="@+id/actionSaveNote"
            app:destination="@id/homeFragment">
        </action>
        <argument
            android:name="Note"
            app:argType="com.testingsite.mynotes.db.Note"
            />
        <argument
            android:name="ClickFrom"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/archiveFragment"
        android:name="com.testingsite.mynotes.ui.ArchivesFragment"
        android:label="My Archives"
        tools:layout="@layout/fragment_archives">
        <action
            android:id="@+id/action_archiveFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/reminderFragment"
        android:name="com.testingsite.mynotes.ui.AddReminderFragment"
        android:label="Set Reminders"
        tools:layout="@layout/fragment_add_reminder">

    </fragment>
</navigation>